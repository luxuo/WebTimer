{
	"manifest_version":2,
	"name":"WebTimer",
	"description": "Sets timers on websites",
	"version":"0.8",
	"icons":{"128":"icon_128.png"},
	"browser_action":{
		"default_icon":"icon.png",
		"default_popup":"popup.html",
		"default_title":"Set a timer on a website!"
	},
	"background":{
		"scripts":["background.js"],
		"persistent":false
	},
	"permissions":["active","tabs", "storage"],
	"content_scripts":[{
		"matches":["<all_urls>"],
		"js":["content.js"]
	}]
}
